<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_titre_manga"
            android:layout_marginTop="14dp"
            android:hint="Titre"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/lavende"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:id="@+id/detail_image_manga"
            android:padding="8dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detail_resume_manga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Résume du manga"
            android:padding="20dp"
            android:layout_gravity="center"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/detail_collection_manga"
            android:hint="Detail de ma collection"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="20dp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/detail_statut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Fini ?"/>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_menu"
        app:tint="@color/colorWhite" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/new_resume"
        android:background="@drawable/bordure_lavende"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/mod_resume"
        android:layout_alignEnd="@+id/mod_resume"
        android:hint="Nouveau resumé"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mod_resume"
        android:background="@drawable/oval_cian"
        android:text="Modifier le resumer"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_above="@+id/new_collection"
        android:layout_alignEnd="@+id/new_collection"
        android:layout_marginTop="5dp"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/new_collection"
        android:background="@drawable/bordure_lavende"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_above="@+id/mod_collection"
        android:layout_alignEnd="@+id/mod_collection"
        android:hint="Nouvelle collection"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mod_collection"
        android:background="@drawable/oval_cian"
        android:text="Modifier la collection"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_above="@+id/fab"
        android:layout_alignEnd="@+id/fab"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"/>








</RelativeLayout>