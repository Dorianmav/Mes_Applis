<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.Scans">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/entree"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Scans Ã  ajouter"
            android:hintTextColor="#757575"
            android:inputType="textPersonName"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/chapitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lien_to_scans"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Lien vers le site"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/ajout"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/entree"
            android:text="Ajouter" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_scans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_scans"
            app:layoutManager="LinearLayoutManager"
            tools:itemCount="40"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->


</LinearLayout>